        <Button x:Name="login" Content="Login" HorizontalAlignment="Left" Height="23" Margin="10,89,0,0" VerticalAlignment="Top" Width="76" Click="login_Click"/>
        <Button x:Name="cancel" Content="Cancel" HorizontalAlignment="Left" Height="23" Margin="152,89,0,0" VerticalAlignment="Top" Width="76" Click="cancel_Click"/>
    </Grid>
</Window>
