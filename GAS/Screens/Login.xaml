<Window x:Class="ATM.Screens.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ATM.Screens"
        mc:Ignorable="d"
        Title="Login" Height="153.763" Width="250.406" WindowStartupLocation="CenterScreen" Topmost="True">
    <Grid>
        <TextBox x:Name="password" HorizontalAlignment="Left" Height="23" Margin="10,39,0,0" TextWrapping="Wrap" Text="Password" VerticalAlignment="Top" Width="218"/>
